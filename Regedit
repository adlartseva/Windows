HKEY_CURRENR_USER -> Desctop -> MenuShowDelay (1) #уменьшаем время для отрисовки окон и меню
HKEY_CURRENR_USER -> Mouse -> MouseHoverTime (1) #уменьшаем время для отрисовки окон и меню

--Перезагрузка--

HKEY_LOCAL_MACHINE\SOFTWARE\Microsoft\Windows\CurrentVersion\ImmersiveShell 
((Создать» -> «Параметр DWORD (32-бита) UseWin32TrayClockExperience (1)) #вернуть старый вид часов

--Перезагрузка--

HKEY_CURRENT_USER/SOFTWARE/Microsoft/Windows/CurrentVersion/Themes/Personalize
Создать» -> «Параметр DWORD (32-бита) SystemUsesLightTheme (0) #темная тема оформления

--Перезагрузка--

HKEY_LOCAL_MACHINE\SYSTEM\CurrentControlSet\Control -> WaitToKillServiceTimeout (2000) #быстрое завершение работы
HKEY_CURRENT_USER\Control Panel\Desktop -> WaitToKillAppTimeout (2000) #время в течение которого Windows будет ждать закрытия приложения до того, как завершить его принудительно
HKEY_CURRENT_USER\Control Panel\Desktop -> AutoEndTasks (1) # #-#-#

HKEY_LOCAL_MACHINE\SOFTWARE\Microsoft\Windows NT\CurrentVersion\FontSubstitutes -> MS Shell Dlg (Ubuntu Mono) #изменить шрифт
HKEY_LOCAL_MACHINE\SOFTWARE\Microsoft\Windows NT\CurrentVersion\FontSubstitutes -> MS Shell Dlg2 () #изменить шрифт
